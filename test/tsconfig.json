{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "verbatimModuleSyntax": true,
    "outDir": "dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ]
  },
  "include": ["./**/*.ts"],
  "references": [
    { "path": "../tsconfig.json" }
  ]
}
